<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.sqlite.JDBC</property>
        <property name="hibernate.connection.url">jdbc:sqlite:data/allexpense.db</property>
        <property name="hibernate.dialect">org.hibernate.community.dialect.SQLiteDialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <!-- Corrected Mappings -->
        <mapping class="matrodriguezpa.allexpence.model.Expense"/>
        <mapping class="matrodriguezpa.allexpence.model.Month"/>
        <mapping class="matrodriguezpa.allexpence.model.Project"/>
        <mapping class="matrodriguezpa.allexpence.model.User"/>
    </session-factory>
</hibernate-configuration>